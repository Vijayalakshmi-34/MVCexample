@model MVCexample.Models.Movie
@{

    ViewBag.Title = "EditMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="padding:40px 0px 10px 0px">Edit Movie Details</h2>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        var ReleaseDate = Model.ReleaseDate.HasValue ? Model.ReleaseDate.Value.ToLongDateString() : "No Date";
        var DateAdded = Model.DateAdded.HasValue ? Model.DateAdded.Value.ToLongDateString() : "No Date";

        <div class="form-group">
            @Html.LabelFor(c => c.MovieName)
            @Html.TextBoxFor(c => c.MovieName, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c => c.MovieName)
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.ReleaseDate)
            @Html.TextBox("ReleaseDate", ReleaseDate, new { @class = "form-control", autocomplete = "off" })
            @*@Html.TextBoxFor(c => c.ReleaseDate, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c => c.ReleaseDate)*@
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.DateAdded)
            @Html.TextBox("DateAdded", DateAdded, new { @class = "form-control", autocomplete = "off" })
            @*@Html.TextBoxFor(c => c.DateAdded, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c => c.DateAdded)*@
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.AvailableStock)
            @Html.TextBoxFor(c => c.AvailableStock, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c => c.AvailableStock)
        </div>

        <div class="form-group">
            @Html.LabelFor(c => c.GenreID)
            @Html.DropDownListFor(c => c.GenreID, ViewBag.GenreID as SelectList, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c => c.GenreID)
        </div>

        <div>
            <input type="submit" name="cmdsubmit" value="Save" class="btn btn-outline-primary" />
        </div>
    }
</div>

<div class="jumbotron">
    @Html.ActionLink("Back to list", "index", "Customers")
</div>

